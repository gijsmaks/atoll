<div class="container">
  <div class="row">
    <div class="col-10 offset-1 col-md-6 offset-3">
      <h1>Booking</h1>
      <%= simple_form_for [@island, @booking] do |f| %>
        <%= f.input :start_date, placeholder: "Start date", label: false %>
        <%= f.input :end_date, placeholder: "End date", label: false %>
        <p><%= @island.price %><p>
        <%= f.button :submit, class:"btn btn-atoll w-100" %>
      <% end %>
    </div>
  </div>
</div>
